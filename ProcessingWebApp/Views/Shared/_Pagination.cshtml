@using Contracts.ViewModels
@model PaginationViewModel

<div>
    @{
        var previousPageNumber = Model.CurrentPage - 1;
        var nextPageNumber = Model.CurrentPage + 1;
    }
    @if (Model.IsPreviousPage)
    {
        <div class="pr-button active pr-pagination-button" onclick="GetPage(@previousPageNumber, '@Model.PaginationFunctionUrl')"><i class="fa fa-chevron-left"></i></div>
    }
    @for (var i = 1; i < Model.TotalPages; i++)
    {
        var active = Model.CurrentPage == i ? "active" : "";
        <div class="pr-button @active pr-pagination-button" onclick="GetPage(@i, '@Model.PaginationFunctionUrl')">@i</div>
    }
    @if (Model.IsNextPage)
    {
        <div class="pr-button active pr-pagination-button" onclick="GetPage(@nextPageNumber, '@Model.PaginationFunctionUrl')"><i class="fa fa-chevron-right"></i></div>
    }
</div>